version: '2'
services:
  php:
    build: .
    ports:
      - "8112:80"
    volumes:
      - ./app:/var/www/html
      - {{ nginx_user_home_directory }}/.ssh:/var/www/.ssh
    restart: unless-stopped
  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    environment:
      PMA_HOST: stationform_mysql_1
    ports:
       - "8113:80"
    restart: unless-stopped
  mysql:
    image: mysql:5.7.20
    environment:
      MYSQL_ROOT_PASSWORD: {{ vault_sites_stations_mysql_root_password }}
      MYSQL_DATABASE: application_sites
      MYSQL_USER: {{ vault_sites_stations_mysql_user }}
      MYSQL_PASSWORD: {{ vault_sites_stations_mysql_password }}
    ports:
      - "3338:3306"
    volumes:
      - ./db:/var/lib/mysql/
    restart: unless-stopped
